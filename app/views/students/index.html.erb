<p style="color: green"><%= notice %></p>

<h1>Students</h1>

<%= render 'search_form', search_params: @search_params %>

<div id="students">
  <% if @students.empty? %>
    <% if @search_params.empty? %>
      <p class="text-center">Please search for students to display results.</p>
    <% else %>
      <p class="text-center">No students found matching your criteria.</p>
    <% end %>
  <% else %>
    <h2>Search Results</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Major</th>
          <th>Graduation Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.major %></td>
            <td><%= student.graduation_date %></td>
            <td>
              <%= link_to 'Show', student %> |
              <%= link_to 'Edit', edit_student_path(student) %> |
              <%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure you want to delete this student?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <%= link_to "Show All", students_path(search: { major: "" }), class: "btn btn-primary" %>
</div>

<%= link_to "New student", new_student_path, class: "btn btn-success" %>