<%= form_with(url: students_path, method: :get, local: true, class: "form-inline") do |form| %>
  <div class="form-group">
    <%= form.label :major, "Select Major", class: "form-label" %>
    <%= form.select "search[major]", options_for_select(Student::VALID_MAJORS, @search_params[:major]), { prompt: "Any Major" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date_filter, "Before or After", class: "form-label" %>
    <%= form.select "search[date_filter]", options_for_select([['Before', 'before'], ['After', 'after']], @search_params[:date_filter]), { prompt: "Before/After" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :graduation_date, "Graduation Date", class: "form-label" %>
    <%= form.date_field "search[graduation_date]", value: @search_params[:graduation_date], class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Search", class: "btn btn-primary" %>
  </div>
<% end %>