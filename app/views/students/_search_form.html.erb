<%= form_with(url: students_path, method: :get, local: true, class: "form-inline") do |form| %>
  <div class="form-group d-flex align-items-center mb-2">
    <%= form.label :major, "Major", class: "form-label mt-2 me-2", aria: { describedby: "major-description" } %>
    <%= form.select "search[major]", options_for_select(Student::VALID_MAJORS, @search_params[:major]), { prompt: "Any Major" }, class: "form-control", aria: { label: "Select a major" } %>
  </div>

  <div class="form-group d-flex align-items-center mb-2">
    <%= form.label :date_filter, "Before/After", class: "form-label mt-2 me-2", aria: { describedby: "date-filter-description" } %>
    <%= form.select "search[date_filter]", options_for_select([['Before', 'before'], ['After', 'after']], @search_params[:date_filter]), { prompt: "Before/After" }, class: "form-control", aria: { label: "Select before or after" } %>
    <%= form.label :graduation_date, "Graduation", class: "form-label ms-2 mt-2 me-2", aria: { describedby: "graduation-date-description" } %>
    <%= form.date_field "search[graduation_date]", value: @search_params[:graduation_date], class: "form-control", aria: { label: "Enter graduation date" } %>
  </div>

  <div class="form-group d-flex justify-content-end">
    <%= form.submit "Search", class: "btn btn-primary me-2", aria: { label: "Search for students" } %>
    <%= link_to "Show All", students_path(search: { major: "" }), class: "btn btn-secondary me-2", aria: { label: "Show all students" } %>
    <%= link_to "New student", new_student_path, class: "btn btn-secondary", aria: { label: "Create a new student" } %>
  </div>
<% end %>